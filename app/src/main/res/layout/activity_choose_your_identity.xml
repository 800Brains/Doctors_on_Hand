<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Forgot_password"
    android:layout_gravity="center"
    android:background="@color/powder">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_top_buttons"
        android:gravity="">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/logo"
            android:gravity="center"
            android:layout_marginStart="110dp"
            android:layout_marginTop="50dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Choose your identity"
            android:textColor="@color/black"
            android:layout_marginTop="260dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/care_seeker"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/family"
            android:layout_marginTop="310dp"
            android:layout_marginStart="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Care Seeker"
            android:textColor="@color/black"
            android:layout_marginTop="470dp"
            android:layout_marginStart="50dp"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/care_provider"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/doc"
            android:layout_marginTop="310dp"
            android:layout_marginStart="240dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Care Provider"
            android:textColor="@color/black"
            android:layout_marginTop="470dp"
            android:layout_marginStart="250dp"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/careseeker_registerbtn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="550dp"
            android:layout_marginStart="50dp"
            android:text="Register"/>

        <Button
            android:id="@+id/careprovider_registerbtn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="550dp"
            android:layout_marginStart="50dp"
            android:text="Register"/>

        <Button
            android:id="@+id/careseeker_loginbtn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="600dp"
            android:layout_marginStart="50dp"
            android:text="Login"/>

        <Button
            android:id="@+id/careprovider_loginbtn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="600dp"
            android:layout_marginStart="50dp"
            android:text="Login"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>